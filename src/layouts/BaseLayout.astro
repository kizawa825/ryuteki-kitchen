---
import '../styles/global.css';

const {
  title = '龍的厨房 | Ryuteki Kitchen',
  description = '伝統とモダンが調和する高級中華レストラン「龍的厨房」公式サイト。',
  lang = 'ja',
  alternateHref = lang === 'ja' ? '/en/' : '/',
  navLinks: providedNavLinks
} = Astro.props;

const navLinks =
  providedNavLinks ??
  (lang === 'ja'
    ? [
        { href: '#menu', label: 'メニュー' },
        { href: '#about', label: '店舗情報' },
        { href: '#gallery', label: 'ギャラリー' },
        { href: '#access', label: 'アクセス' },
        { href: '#reservation', label: 'ご予約' }
      ]
    : [
        { href: '#menu', label: 'Menu' },
        { href: '#about', label: 'About' },
        { href: '#gallery', label: 'Gallery' },
        { href: '#access', label: 'Access' },
        { href: '#reservation', label: 'Reservation' }
      ]);

const languageSwitchLabel = lang === 'ja' ? 'EN' : '日本語';
const reserveLabel = lang === 'ja' ? 'Web予約' : 'Reserve';
const reserveHref = '#reservation';
---

<!doctype html>
<html lang={lang} class="theme-light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="alternate" href={alternateHref} hreflang={lang === 'ja' ? 'en' : 'ja'} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to content</a>
    <header class="site-header">
      <div class="header-inner">
        <a class="brand" href={lang === 'ja' ? '/' : '/en/'} aria-label="Ryuteki Kitchen home">
          <span class="brand-line">龍的厨房</span>
          <span class="brand-line">Ryuteki Kitchen</span>
        </a>
        <button class="menu-toggle" type="button" data-menu-toggle aria-expanded="false">
          <span class="menu-label">{lang === 'ja' ? 'メニュー' : 'Menu'}</span>
          <span class="menu-icon" aria-hidden="true"></span>
        </button>
        <nav
          class="primary-nav"
          data-mobile-nav
          aria-label={lang === 'ja' ? 'グローバルナビゲーション' : 'Primary navigation'}
        >
          <ul>
            {navLinks.map(({ href, label }) => (
              <li>
                <a href={href}>{label}</a>
              </li>
            ))}
          </ul>
          <div class="header-actions">
            <a class="language-switch" href={alternateHref}>{languageSwitchLabel}</a>
            <a class="primary-cta" href={reserveHref}>{reserveLabel}</a>
          </div>
        </nav>
      </div>
    </header>
    <main id="main" class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="footer-inner">
        <div>
          <p class="footer-logo">龍的厨房 Ryuteki Kitchen</p>
          <p class="footer-meta">
            {lang === 'ja'
              ? '東京都内某所 ｜ 営業時間 11:30-15:00 / 17:30-22:30'
              : 'Tokyo, Japan ｜ Open 11:30-15:00 / 17:30-22:30'}
          </p>
        </div>
        <div class="footer-contact">
          <a href="tel:+81300000000">+81-3-0000-0000</a>
          <a href="mailto:reservation@ryuteki-kitchen.jp">reservation@ryuteki-kitchen.jp</a>
        </div>
      </div>
    </footer>
    <script>
      const toggle = document.querySelector('[data-menu-toggle]');
      const nav = document.querySelector('[data-mobile-nav]');
      
      function closeMenu() {
        toggle.setAttribute('aria-expanded', 'false');
        toggle.classList.remove('is-open');
        nav.removeAttribute('data-open');
        document.body.classList.remove('nav-open');
      }
      
      function openMenu() {
        toggle.setAttribute('aria-expanded', 'true');
        toggle.classList.add('is-open');
        nav.setAttribute('data-open', '');
        document.body.classList.add('nav-open');
      }
      
      if (toggle && nav) {
        toggle.addEventListener('click', () => {
          const expanded = toggle.getAttribute('aria-expanded') === 'true';
          if (expanded) {
            closeMenu();
          } else {
            openMenu();
          }
        });
        
        // メニューのリンクをクリックしたときにメニューを閉じる
        const navLinks = nav.querySelectorAll('a');
        navLinks.forEach(link => {
          link.addEventListener('click', () => {
            closeMenu();
          });
        });
      }
    </script>
  </body>
</html>
